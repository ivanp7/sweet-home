# dmenu_run {{{

# program launcher
super + Return
    xkblayout.sh; \
    dmenu_run

# }}}
# st {{{

super + ctrl + shift + Return
    st.sh

super + ctrl + Return
    tabbed-st.sh

super + ctrl + grave
    scratchpad-st.sh

# }}}
# applications {{{

super + Menu
    pass-dmenu.sh

super + a
    man-dmenu.sh

super + equal
    calc-dmenu.sh

super + d
    dict-dmenu.sh

# }}}
# screen lock {{{

# lock screen
super + Pause
    slock.sh

# }}}
# screen capture {{{

# make screenshot
{_,ctrl + }{_,shift + } Print
    xscreenshot.sh { ,-su} { | xclip.sh image/png, }

# make screencast
super + {_,shift + }{_,ctrl + } Print
    xscreencapture.sh {screen,screen/mic} {"#","+"}

# }}}
# X clipboard {{{

# copy primary selection to clipboard
super + alt + c
    xclipp.sh

# tmux clipboard manager
super + ctrl + c
    xclip-tmux.sh
super + ctrl + Cyrillic_es
    xclip-tmux.sh

super + ctrl + v
    tmux-xclip.sh
super + ctrl + Cyrillic_ve
    tmux-xclip.sh

# }}}
# hardware control {{{

# monitor brightness control
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    backlight.sh {up,down}
ctrl + {XF86MonBrightnessUp,XF86MonBrightnessDown}
    backlight.sh {max,0}

# }}}

