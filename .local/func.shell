# functionality {{{

bd ()
{
    local Num="$1"
    [ "$Num" ] || { cd ..; return; }

    local Path="./"
    for i in $(seq $Num)
    do
        local Path="$Path/.."
    done

    cd -- "$Path"
}

bdrm ()
{
    bd "$1"
    rmdir -p -- "$(realpath -s --relative-to "$PWD" "$OLDPWD")"
}

mkcd ()
{
    local DIRS="$@"
    mkdir -p -- "$DIRS"
    cd -- "$DIRS"
}

pwdir ()
{
    /usr/bin/printf "%q\n" "${1:-"$PWD"}"
}

